<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".StartQuiz">

    <TextView
        android:id="@+id/tvObjective"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Test your financial literacy and improve your money management skills with 10 quick questions!"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="start"
        android:padding="16dp"
        android:layout_marginBottom="30dp"
        android:lineSpacingExtra="4dp"
        android:text="✔️ You have 30 seconds per question.\n✔️ Select the best answer from the given options.\n✔️ Your final score will be shown at the end.\n✔️ No worries if you get a wrong answer—you’ll learn something new!\n✔️ Try to improve your score every time!" />


    <TextView
        android:id="@+id/tvMotivation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="italic"
        android:text="@string/motivation_quote"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:paddingBottom="15dp"/>



    <Button
        android:id="@+id/btnStartQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Quiz"
        android:textSize="18sp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"/>
</LinearLayout>
